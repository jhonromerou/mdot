#!/usr/bin/env bash

# Path app installation
# Require define before call

# Colores
C_RED='\033[0;31m'
C_NC='\033[0m'


# ------
 # Functions
# ------

# Functions to use in app

function i_br()
{ 
    echo "" 
}

function i_read()
{
    message=$(printf " ${C_RED}===>${C_NC} $1")
    shift
    read -e -p "$message" $@
    i_br
}

function i_echo()
{
    printf "$1\n"
}

function i_mdot_title()
{
    printf "${C_RED}****${C_NC} $1\n"
}

function mdot-core-clear(){
    #unset -f i_mdot_title
    unset -f i_echo
    unset -f i_read
    unset -f i_br
    unset -f mdot-core-clear
}

# TODO: refactor

# Detiene el proceso que est√© usando el puerto tcp definido
 # m-kill-port 80:
function m-kill-port () {
    fuser -k -n tcp $@
}

function m-grep-line()
{
    grep -n $@ | awk -F ":" '{ print $1 }' | head -1
}